<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NewCarActivity">

    <!-- Begin Top Design -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/top"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/lb_emitir_multa"
                android:text="Novo Transito"
                android:paddingTop="@dimen/paddingfield"
                android:paddingBottom="@dimen/paddingfield"
                android:paddingRight="50dp"
                android:paddingLeft="50dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_margin="@dimen/marginfield"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/backCar"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:tint="@color/white"
                android:layout_margin="10dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"/>
            <ImageView
                android:src="@drawable/menu_vertical_64px"
                android:tint="@color/white"
                android:layout_margin="10dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
        <!-- Begin content layout -->
        <ScrollView
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:scrollbarSize="2dp"
            android:scrollbarStyle="insideInset"
            android:scrollbarFadeDuration="2"
            android:backgroundTintMode="screen"
            android:scrollIndicators="start">

            <LinearLayout
                android:layout_margin="@dimen/marginfield"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/markCar"
                    android:background="@drawable/border"
                    android:padding="@dimen/paddingfield"
                    android:hint="Marca:"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginfield"/>

                <EditText
                    android:id="@+id/color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginfield"
                    android:background="@drawable/border"
                    android:hint="Apelido:"
                    android:padding="@dimen/paddingfield"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/placCar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginfield"
                    android:background="@drawable/border"
                    android:hint="Email:"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/paddingfield"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/modeloRest"
                    android:background="@drawable/border"
                    android:padding="@dimen/paddingfield"
                    android:hint="Senha:"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginfield"
                    android:ems="10"
                    android:inputType="textPassword"/>

                <EditText
                    android:id="@+id/fabricanteRest"
                    android:background="@drawable/border"
                    android:padding="@dimen/paddingfield"
                    android:hint="Confirme Senha:"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginfield"
                    android:ems="10"
                    android:inputType="textPassword"/>

                <TextView
                    android:id="@+id/message_police"
                    android:paddingRight="50dp"
                    android:paddingLeft="50dp"
                    android:textSize="16sp"
                    android:textColor="#FF0000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <Button
                    android:id="@+id/btn_seve_police"
                    android:text="Salvar"
                    android:textIsSelectable="false"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/colorPrimary"
                    android:padding="@dimen/paddingfield"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginfield"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <!-- /End Top Design -->

    <!-- begin content layout -->
    <!--/end content layout -->
</RelativeLayout>